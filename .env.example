# Environment variables for AI Response Bot
# Copy this file to .env and fill in your actual values

# Twitter API Configuration
TWITTER_API_URL=your_twitter_api_url_here
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_COOKIE=your_cookie_string_here
TWITTER_USER_AGENT=your_user_agent_here
TWITTER_CSRF_TOKEN=your_csrf_token_here

# Ollama Configuration (optional - defaults to localhost)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Optional: Override config file location
CONFIG_FILE=config.yaml
